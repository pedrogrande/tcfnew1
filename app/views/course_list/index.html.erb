<%= content_for :page_title, 'Web development and javascript courses' %>
<%= content_for :breadcrumb, 'Courses' %>
<%= content_for :title, 'Web development and javascript courses: Beginner Coder, Rails Coder, Angular Coder, Expert Coder and Summer Coder Camp' %>
<%= content_for :description, "The Coder Factory offers a range of part time courses to teach you web development with Ruby on Rails, Angular.js, HTML5, CSS3, jQuery." %>
<!-- 
<p class="sub-heading-upper">The Coder Factory Courses</p> -->
		
<div class="row">
	<% @courses.each_with_index do |course, index| %>
		<% if (index + 1)%2 != 0 %>
			</div><div class="row">
		<% end %>
		<div class="col-md-6">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h2 class="panel-title">
						<%= link_to course.title, course %> <small><%= course.duration %> <i class="fa fa-angle-double-right"></i> AUD <%= course.price %></small>
						
					</h2>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-md-3">
							<%= image_tag course.image, class: 'img-responsive' %>
						</div>
					
						<div class="col-md-9">
							
							<h3><%= course.lead %></h3>
							<p><%= course.intro %></p>
							<p>
							 Next class starts: <span class="start-date"><%= course.intakes.first.start_date.strftime('%A, %e %h %Y') %></span>
							</p>
							<%= link_to course, class: 'btn btn-success btn-lg' do %><i class="fa fa-chevron-circle-right"></i> Find out more<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
<% end %>
</div>