<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :lead %>
    <%= f.input :description %>
    <%= f.input :date %>
    <%= f.input :start_time %>
    <%= f.input :finish_time %>
    <%= f.input :publish %>
    <%= f.input :recurring %>
    <%= f.input :recurring_interval %>
    <%= f.input :recurring_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
