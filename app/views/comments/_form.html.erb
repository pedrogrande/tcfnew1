<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :post %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :website %>
    <%= f.input :content %>
    <%= f.input :publish %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
