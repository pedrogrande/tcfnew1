<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.association :enrolment, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :payment_amount, input_html: { class: 'form-control'} %>
  </div>
  <%= f.button :submit %>
  
<% end %>
