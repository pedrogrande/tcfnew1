<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :image, as: :file %>
    <%= f.input :lead %>
    <%= f.input :intro %>
    <%= f.input :description %>
    <%= f.input :designed_for %>
    <%= f.input :price %>
    <%= f.input :duration %>
    <%= f.input :active %>
    <%= f.input :priority %>
    <%= f.input :programme, as: :file %>
    <%= f.input :slug %>
    <%= f.input :highlight %>
    <%= f.input :course_order %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
