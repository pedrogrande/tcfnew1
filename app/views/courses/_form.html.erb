<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :lead %>
    <%= f.input :intro %>
    <%= f.input :description %>
    <%= f.input :designed_for %>
    <%= f.input :price %>
    <%= f.input :duration %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
