<%= content_for :page_title, @course.title %>
<%= content_for :breadcrumb, 'Courses' %>
<%= content_for :link, '/web-development-and-javascript-courses' %>
<%= content_for :sub_breadcrumb, @course.title %>
<%= content_for :title, @course.title + ' Next start date: ' + @course.intakes.first.start_date.strftime('%e %h %Y').to_s %>
<%= content_for :description, @course.title + ': ' + @course.lead + @course.intro + ' Next start date: ' + @course.intakes.first.start_date.strftime('%e %h %Y').to_s %>
<div class="row">
<div class="col-md-8">
<div class="panel panel-default">
	<div class="panel-heading">
				<h2 class="panel-title"><%= link_to @course.title, @course %> &nbsp;&nbsp;<small><%= @course.duration %> <i class="fa fa-angle-double-right"></i> AUD <%= @course.price %> </small></h2>
	</div>
	<div class="panel-body">
		<div class="row">
			<div class="col-md-9">
				<h3 class="hype"><%= @course.lead %></h3>
				<p><%= link_to new_enrolment_path(:course => @course), class: "btn btn-success" do %><i class="fa fa-arrow-circle-right"></i> Enrol to reserve your place<% end %>
				&nbsp;
				<%= link_to new_programme_request_path(:course => @course), class: 'btn btn-primary btn-sm' do %><i class="fa fa-download"></i> Download programme details<% end %>
				</p>
				<p class="lead"><%= @course.intro.html_safe %></p>
				<h3>The programme</h3>
				<%= @course.description.html_safe %>
				
				<br>
			</div>
			<div class="col-md-3">
				<%= image_tag @course.image, class: 'img-responsive' %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6">
				<p class="sub-heading-upper">What you'll learn</p>
				<ul class="plus">
					<% @course.skills.each do |skill| %>
						<li><%= skill.name.html_safe %> 
							<% if !skill.description.empty? %>
								<a href="#" data-toggle="tooltip" title="" data-original-title="<%= skill.description.html_safe %>"><i class="fa fa-question-circle"></i></a>
							<% end %>
						</li>
					<% end %>
				</ul>

			</div>
			<div class="col-md-6">
				<p class="sub-heading-upper">Next class starts soon</p>
				<% if !@intake.places_left.nil? %>
					<strong>
						<span class="red"> 
							<span class="badge">
								Only <%= pluralize(@intake.places_left, 'place') %> left 
							</span>
						</span>
					</strong>
				<% end %>
				<ul class="star">
					<li>Start date: <span class="start-date"><%= @intake.start_date.strftime('%A, %e %h %Y') %></span></li>
					<li>Location: <%= @intake.location %></li>
					<li><%= @intake.class_days %></li>
					<li><%= @intake.start_time.strftime('%l:%M%P') %> - <%= @intake.finish_time.strftime('%l:%M%P') %></li>
				</ul>
				<%= link_to new_enrolment_path(:course => @course), class: "btn btn-success btn-lg" do %><i class="fa fa-arrow-circle-right"></i> Enrol to reserve your place<% end %>
				<br><br>
				<%= link_to new_programme_request_path(:course => @course), class: 'btn btn-primary btn-sm' do %><i class="fa fa-download"></i> Download programme details<% end %>

				<br><br>
				<% if @intakes.count > 1 %>
				<div class="well">
					<h3>Upcoming intakes</h3>
					<% @intakes.each do |intake| %>
						<p>Start date: <span class="start-date"><%= intake.start_date.strftime('%A, %e %h %Y') %></span></p>
					<% end %>
				
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
<% if user_signed_in? %>
	<% if current_user.has_role? :admin %>
		<%= link_to "edit", edit_course_path(@course), class: 'btn btn-warning btn-sm' %>
	<% end %>
<% end %>
</div>
<div class="col-md-4">
<p class="sub-heading-upper">More courses</p>
<div class="accordion accordion-style1">
<% @courses.each do |course| %>
	<% if course != @course %>
		 	<h4 class="accordion-title"><a href="#"><%= course.title %></a></h4>
		 	<div>
		 		<p><span class="start-date">
						<%= course.duration %> | AUD <%= course.price %> | Class starts: <%= course.intakes.first.start_date.strftime('%e %h %Y') %>
						</span>

		 		<br><%= course.lead %></p>
		 		<p><%= link_to "More info", course, class: 'btn btn-info btn-xs' %></p>
		 	</div>
		 
	<% end %>
<% end %>
</div></div>